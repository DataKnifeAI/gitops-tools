apiVersion: v1
kind: Secret
metadata:
  name: harbor-postgresql-credentials
  namespace: managed-tools
  labels:
    app: harbor
    component: database
    managed-by: gitops
type: Opaque
stringData:
  # Username for the database owner (created by CloudNativePG from bootstrap.initdb.owner)
  username: "harbor"
  # Password for the 'harbor' database owner user
  # This password should match the databasePassword in harbor-credentials secret
  # NOTE: This is an example file. Copy to postgresql-credentials.yaml and fill in actual values
  # The actual password should come from your .env file (HARBOR_DATABASE_PASSWORD)
  # Create/update the secret using: ./scripts/create-harbor-secrets.sh
  # Or manually: kubectl create secret generic harbor-postgresql-credentials \
  #   --from-literal=username=harbor \
  #   --from-literal=password='<password-from-env>' \
  #   -n managed-tools
  password: "CHANGE_ME_USE_ENV_FILE"
  # Note: For production, use a strong password and store it securely
  # The same password should be in harbor-credentials secret as databasePassword
