# Example secret for GitHub Actions Runner Controller authentication
# 
# This file is for reference only. Create the actual secret using kubectl:
#
#   kubectl create secret generic actions-runner-controller \
#     --from-literal=github_token='<YOUR_GITHUB_PAT>' \
#     -n actions-runner-system
#
# Or for GitHub App:
#   kubectl create secret generic actions-runner-controller \
#     --from-literal=github_app_id='<APP_ID>' \
#     --from-literal=github_app_installation_id='<INSTALLATION_ID>' \
#     --from-literal=github_app_private_key='<PRIVATE_KEY>' \
#     -n actions-runner-system

apiVersion: v1
kind: Secret
metadata:
  name: actions-runner-controller
  namespace: actions-runner-system
type: Opaque
stringData:
  # GitHub Personal Access Token (PAT) method
  github_token: "<YOUR_GITHUB_PAT>"
  
  # OR GitHub App method (use one or the other, not both)
  # github_app_id: "<APP_ID>"
  # github_app_installation_id: "<INSTALLATION_ID>"
  # github_app_private_key: |
  #   -----BEGIN RSA PRIVATE KEY-----
  #   <PRIVATE_KEY_CONTENT>
  #   -----END RSA PRIVATE KEY-----
